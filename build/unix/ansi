ESC=`printf '\033'`
ANSI_BOLD="${ESC}[1m"
ANSI_NORMAL="${ESC}[0m"

ANSI_BLK="${ESC}[30m"
ANSI_RED="${ESC}[31m"
ANSI_GRN="${ESC}[32m"
ANSI_YLW="${ESC}[33m"
ANSI_BLU="${ESC}[34m"
ANSI_MGN="${ESC}[35m"
ANSI_CYN="${ESC}[36m"
ANSI_WHT="${ESC}[37m"
ANSI_LBLK="${ESC}[1;30m"
ANSI_LRED="${ESC}[1;31m"
ANSI_LGRN="${ESC}[1;32m"
ANSI_LYLW="${ESC}[1;33m"
ANSI_LBLU="${ESC}[1;34m"
ANSI_LMGN="${ESC}[1;35m"
ANSI_LCYN="${ESC}[1;36m"
ANSI_LWHT="${ESC}[1;37m"

