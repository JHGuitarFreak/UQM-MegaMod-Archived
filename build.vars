BUILD_SYSTEM='Linux'
HOST_SYSTEM='Linux'
PREPROC_C='gcc -E '
MKDEP_C='gcc -MM '
COMPILE_C='gcc -c '
PREPROC_CXX='gcc -E '
MKDEP_CXX='gcc -MM '
COMPILE_CXX='gcc -c '
PREPROC_OBJC=''
MKDEP_OBJC=''
COMPILE_OBJC=''
LINK='gcc '
MAKE='make'
ECHON='echo -n'
SED='sed'
REZ=''
WINDRES=''
uqm_CFLAGS=' -I/usr/include/SDL -D_GNU_SOURCE=1 -D_REENTRANT -I/usr/include/SDL -D_GNU_SOURCE=1 -D_REENTRANT      -O3 -DNDEBUG -DGFXMODULE_SDL -DHAVE_OPENGL -DUSE_INTERNAL_MIKMOD -DUSE_INTERNAL_LUA -DNETPLAY=NETPLAY_FULL -DHAVE_JOYSTICK -DHAVE_ZIP=1 -DUSE_PLATFORM_ACCEL -DTHREADLIB_SDL -I"."'
uqm_CXXFLAGS=' -fno-rtti -fno-exceptions -nostdinc++  -O3 -DNDEBUG -DGFXMODULE_SDL -DHAVE_OPENGL -DUSE_INTERNAL_MIKMOD -DUSE_INTERNAL_LUA -DNETPLAY=NETPLAY_FULL -DHAVE_JOYSTICK -DHAVE_ZIP=1 -DUSE_PLATFORM_ACCEL -DTHREADLIB_SDL -I"."'
uqm_LDFLAGS=' -L/usr/lib/x86_64-linux-gnu -lSDL -L/usr/lib/x86_64-linux-gnu -lSDL -lSDL_image -lGL -lvorbisfile  -lz -lm'
uqm_INSTALL_BINDIR='/usr/local/games/bin/'
uqm_INSTALL_LIBDIR='/usr/local/games/lib/'
uqm_INSTALL_SHAREDIR='/usr/local/games/share/'

# Exported variables are available from all the Makeinfo files
# Non-exported files only where build.vars is explicitely included.
uqm_SOUNDMODULE='mixsdl'
uqm_OGGVORBIS='vorbisfile'
uqm_USE_INTERNAL_MIKMOD='1'
uqm_USE_INTERNAL_LUA='1'
uqm_HAVE_GETOPT_LONG='#define HAVE_GETOPT_LONG'
uqm_HAVE_REGEX='1'
uqm_GFXMODULE='sdl'
uqm_HAVE_OPENGL='1'
uqm_USE_ZIP_IO='1'
uqm_USE_PLATFORM_ACCEL='1'
uqm_THREADLIB='SDL'
uqm_NETPLAY='FULL'
uqm_USE_WINSOCK=''
DEBUG='0'
MACRO_WIN32=''
MACRO___MINGW32__=''
export BUILD_SYSTEM HOST_SYSTEM DEBUG
export MACRO_WIN32 MACRO___MINGW32__
export uqm_SOUNDMODULE uqm_OGGVORBIS uqm_USE_INTERNAL_MIKMOD
export uqm_USE_INTERNAL_LUA
export uqm_HAVE_GETOPT_LONG uqm_HAVE_REGEX uqm_USE_WINSOCK uqm_GFXMODULE
export uqm_HAVE_OPENGL
export uqm_USE_ZIP_IO uqm_USE_PLATFORM_ACCEL uqm_THREADLIB uqm_NETPLAY

